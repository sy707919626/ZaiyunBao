<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/receive_lease_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="塑料田字托盘"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_bt" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规格："
                android:textColor="@color/text_info"
                android:textSize="@dimen/text_bt" />

            <TextView
                android:id="@+id/receive_lease_norm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L1200*W1000*H156"
                android:textColor="@color/text_info"
                android:textSize="@dimen/text_bt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备编号："
                android:textColor="@color/text_info"
                android:textSize="@dimen/text_size_trhee" />

            <TextView
                android:id="@+id/receive_lease_orderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34564654654654"
                android:textColor="@color/text_info"
                android:textSize="@dimen/text_size_trhee" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/color_9c" />
</LinearLayout>
