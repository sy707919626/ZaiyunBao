<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <include layout="@layout/details_title_basic_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">


        <Button
            android:id="@+id/rbtn_zulin"
            style="@style/tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/leaseorder"
            android:text="租赁订单"
            android:textSize="14dp" />

        <Button
            android:id="@+id/rbtn_zhuanzu"
            style="@style/tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/zhuanzuorder"
            android:text="转租订单"
            android:textSize="14dp" />

        <Button
            android:id="@+id/rbtn_qiuzu"
            style="@style/tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/seekrentorder"
            android:text="求租订单"
            android:textSize="14dp" />

        <Button
            android:id="@+id/rbtn_goumai"
            style="@style/tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/goumaiorder"
            android:text="购买订单"
            android:textSize="14dp" />

        <Button
            android:id="@+id/rbtn_tuizu"
            style="@style/tab_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/tuizuorder"
            android:text="退租订单"
            android:textSize="14dp" />

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
