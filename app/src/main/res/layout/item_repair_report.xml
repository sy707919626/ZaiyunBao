<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_shape"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/repair_report_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="塑料田字托盘"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_bt" />

            <TextView
                android:id="@+id/repair_report_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="磨损"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_bt" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/repair_report_Name"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/repair_report_orderNo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="设备编号："
                    android:textSize="@dimen/text_size_trhee" />

                <TextView
                    android:id="@+id/repair_report_orderNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/repair_report_orderNo_text"
                    android:layout_alignBottom="@+id/repair_report_orderNo_text"
                    android:layout_toEndOf="@+id/repair_report_orderNo_text"
                    android:layout_toRightOf="@+id/repair_report_orderNo_text"
                    android:text="34564654654654"
                    android:textSize="@dimen/text_size_trhee" />

                <Button
                    android:id="@+id/repair_report_delete_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/button_bg_cancel"
                    android:minHeight="0dp"
                    android:text="删除"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_trhee" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
