<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/details_title_basic_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:drawableRight="@drawable/tips"
                android:gravity="center"
                android:text="通过登录密码进行验证"
                android:textColor="@color/text_hint_black2"
                android:textSize="@dimen/text_size_trhee" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/color_9c" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/updatePhone_two_password_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="登录密码"
                android:textColor="@color/text_black"
                android:textSize="14dp" />

            <!--<com.lulian.Zaiyunbao.common.widget.ClearEditText-->
            <!--android:id="@+id/updatePhone_two_password"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:layout_toRightOf="@id/updatePhone_two_password_text"-->
            <!--android:background="@null"-->
            <!--android:drawablePadding="10dp"-->
            <!--android:gravity="right"-->
            <!--android:hint="请填写登录密码"-->
            <!--android:inputType="textPassword"-->
            <!--android:textColor="@color/text_color_black"-->
            <!--android:textSize="@dimen/text_size_trhee" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/updatePhone_two_password_text">

                <EditText
                    android:id="@+id/updatePhone_two_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/updatePhone_two_password_Password"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入新密码"
                    android:inputType="textPassword"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_hint_black"
                    android:textSize="@dimen/login_edit_size" />

                <CheckBox
                    android:id="@+id/updatePhone_two_password_Password"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:button="@drawable/button_visible"
                    android:checked="false"
                    android:gravity="center" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/updatePhone_two_next"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/button_shixin_shape"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/login_edit_size" />
    </LinearLayout>
</LinearLayout>
