<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_record_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="出账"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_bt" />

        <!--金额数量-->
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:text="-100.00"
            android:textColor="@color/text_bule"
            android:textSize="@dimen/text_bt" />

        <TextView
            android:id="@+id/tv_TradSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_record_type"
            android:text="手工录入"
            android:textColor="@color/text_info"
            android:textSize="@dimen/text_size_trhee" />

        <!--交易时间-->
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_TradSum"
            android:layout_marginTop="5dp"
            android:text="2018-10-10 18:45:32"
            android:textColor="@color/text_info"
            android:textSize="@dimen/text_size_trhee" />

    </RelativeLayout>
    <!--记录类型-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/color_9c" />
</LinearLayout>